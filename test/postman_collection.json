{
  "info": {
    "name": "ZuLMe 新预订流程测试",
    "description": "测试先预订后订单的新流程",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8888"
    },
    {
      "key": "userToken",
      "value": "your-user-token-here"
    }
  ],
  "item": [
    {
      "name": "1. 检查车辆可用性",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"vehicle_id\": 1,\n  \"start_date\": \"2024-01-15\",\n  \"end_date\": \"2024-01-20\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/vehicle-inventory/check-availability",
          "host": ["{{baseUrl}}"],
          "path": ["vehicle-inventory", "check-availability"]
        }
      }
    },
    {
      "name": "2. 创建预订（新流程）",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{userToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"vehicle_id\": 1,\n  \"start_date\": \"2024-01-15\",\n  \"end_date\": \"2024-01-20\",\n  \"notes\": \"需要儿童座椅，希望是白色车辆\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/vehicle-inventory/reservation/create",
          "host": ["{{baseUrl}}"],
          "path": ["vehicle-inventory", "reservation", "create"]
        }
      }
    },
    {
      "name": "3. 验证车辆不可用",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"vehicle_id\": 1,\n  \"start_date\": \"2024-01-15\",\n  \"end_date\": \"2024-01-20\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/vehicle-inventory/check-availability",
          "host": ["{{baseUrl}}"],
          "path": ["vehicle-inventory", "check-availability"]
        }
      }
    },
    {
      "name": "4. 基于预订创建订单",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{userToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"reservation_id\": 123,\n  \"pickup_location_id\": 1,\n  \"return_location_id\": 2,\n  \"notes\": \"下午3点取车，需要提前准备儿童座椅\",\n  \"payment_method\": 1,\n  \"expected_total_amount\": 1500.00\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/order/create-from-reservation",
          "host": ["{{baseUrl}}"],
          "path": ["order", "create-from-reservation"]
        }
      }
    }
  ]
}
